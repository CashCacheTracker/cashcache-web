{{mdl-textfield class='location' label='Location' value=transaction.location}}

{{#if transaction.isNew}}
  {{#if transaction.coordinateEnabled}}
    {{#if transaction.hasCoordinate}}
      {{mdl-button icon='gps_fixed' class='coordinate-set' action='toggleCoordinateEnabled'}}
    {{else}}
      {{mdl-button icon='gps_not_fixed' class='coordinate-pending' action='toggleCoordinateEnabled'}}
    {{/if}}
  {{else}}
    {{mdl-button icon='gps_off' class='coordinate-disabled' action='toggleCoordinateEnabled'}}
  {{/if}}
{{else}}
  {{#if transaction.hasCoordinate}}
    {{mdl-button icon='gps_fixed' class='coordinate-set'}}
  {{else}}
    {{mdl-button icon='gps_off' class='coordinate-disabled'}}
  {{/if}}
{{/if}}
