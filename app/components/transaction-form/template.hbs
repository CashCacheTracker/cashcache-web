<div class="mdl-grid">
  <div class="mdl-cell mdl-cell--bottom x-mdl-cell--half">
    {{transaction-form-value transaction=transaction}}
  </div>

  <div class="mdl-cell mdl-cell--bottom x-mdl-cell--half">
    {{mdl-textfield class='date' label='Date' value=transaction.date type='date'}}
  </div>

  <div class="mdl-cell x-mdl-cell--full">
    {{mdl-textfield class='description' label='Description' value=transaction.description}}
    {{transaction-form-location transaction=transaction toggleCoordinateEnabled='toggleCoordinateEnabled'}}
    {{mdl-textarea class='note' label='Notes' value=transaction.note}}
  </div>

  <div class="x-mdl-button-bar">
    {{mdl-button class='cancel-transaction-button' action='cancel' text='Cancel'}}
    {{mdl-button class='save-transaction-button' action='save' text='Save' isRaised=true}}
  </div>
</div>
